    <script>
      var slideImg = document.getElementById("slideImg");

      var images = new Array(
        "../images/pobreza1.jpg",
        "../images/pobreza2.jpg",
        "../images/pobreza4.jpg",
        "../images/pobreza5.jpg",
        "../images/pobreza6.jpg",
        "../images/pobreza7.jpg",
        "../images/pobreza8.jpg"
      );

      var len = images.length;
      var i = 0;

      function slider() {
        if (i > len - 1) {
          i = 0;
        }
        slideImg.src = images[i];
        i++;
        setTimeout('slider()', 3000);
      }

    </script>

